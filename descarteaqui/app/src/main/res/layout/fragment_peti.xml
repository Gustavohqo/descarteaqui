<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PetiFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Petições"
        android:textColor="@android:color/white"
        android:id="@+id/title"
        android:gravity="bottom"
        android:paddingBottom="15dp"
        android:textSize="22sp"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendicon"
            android:src="@drawable/ic_present_to_all_white_24dp"
            android:tint="@color/colorPrimary"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enviar uma petição"
            android:id="@+id/send_petition"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/sendicon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTitle"
        android:id="@+id/view3"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/view2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Importante"
        android:textColor="@android:color/white"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Para enviar ou votar em uma petição é necessario efetuar o login."
        android:textColor="@android:color/white"
        android:id="@+id/textView3"
        android:textSize="15sp"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Uma petição informa o lugar onde você deseja que um ponto seja inserido pelo orgão responsável da sua cidade"
        android:textColor="@android:color/white"
        android:id="@+id/textView4"
        android:textSize="15sp"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/view2"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_thumb_up_outline_grey600_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="5dp"
            android:paddingBottom="2dp"
            android:tint="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Votar em petições"
            android:id="@+id/rate_petition"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageView2" />
    </RelativeLayout>

</RelativeLayout>
